@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ABCRenters</h1>
    <h2>@ViewBag.Title</h2>
    </br>
    <section id="carousel-properties" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->

        <ol class="carousel-indicators">

            <li data-target="#carousel-properties" data-slide-to="0" class="active"></li>

            <li data-target="#carousel-properties" data-slide-to="1"></li>

            <li data-target="#carousel-properties" data-slide-to="2"></li>

            <li data-target="#carousel-properties" data-slide-to="3"></li>

            <li data-target="#carousel-properties" data-slide-to="4"></li>

        </ol>



        <!-- Wrapper for slides -->

        <section class="carousel-inner" role="listbox" >

            <figure class="item active">

                <img src="~/Images/Property 1/Property1.BATHROOM.jpg" alt="Property 1 Bathroom">

                <figcaption class="carousel-caption">

                    <a href="http://localhost:56369/Home/Details/1"> 1 bedroom studio flat </a>

                </figcaption>

            </figure>

            <figure class="item">

                <img src="~/Images/Property 2/Property 2 - LIVING.jpg" alt="3 Bedroom Terraced House"/>

                <figcaption class="carousel-caption">

                   <a href="http://localhost:56369/Home/Details/2"> 3 Bedroom Terraced House  </a>

                </figcaption>

            </figure>



            <figure class="item">

                <img src="~/Images/Property 3/Property 3 - KITCHEN.jpg" alt="2 Bed Semi-Detatched House" />

                <figcaption class="carousel-caption">

                    <a href="http://localhost:56369/Home/Details/3"> 2 Bed Semi-detatched house </a>

                </figcaption>

            </figure>



            <figure class="item">

                <img src="~/Images/Property 1/Property1.LIVINGAREA.jpg" alt="1 Bedroom Studio Flat" />

                <figcaption class="carousel-caption">

                    <a href="http://localhost:56369/Home/Details/1"> 1 bedroom studio flat </a>

                </figcaption>

            </figure>



            <figure class="item">

                <img src="~/Images/Property 3/Property 3 - OUTSIDE.jpg" alt="2 Bed Semi-Detatched House" />

                <figcaption class="carousel-caption">

                    <a href="http://localhost:56369/Home/Details/3"> 2 bed semi-detatched house  </a>

                </figcaption>

            </figure>



        </section>



        <!-- Controls -->

        <a class="left carousel-control" href="#carousel-properties" role="button" data-slide="prev">

            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>

            <span class="sr-only">Previous</span>

        </a>

        <a class="right carousel-control" href="#carousel-properties" role="button" data-slide="next">

            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>

            <span class="sr-only">Next</span>

        </a>

    </section>

    <section>

        <br />


    </section>
